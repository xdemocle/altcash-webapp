{
  "name": "altcash-webapp",
  "version": "2.0.1",
  "private": true,
  "description": "Altcash Full-Stack Monorepo - Next.js Frontend + Express/GraphQL Backend",
  "author": "Rocco R. <im@rocco.me>",
  "license": "ISC",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "bun run --filter frontend dev & bun run --filter backend dev",
    "dev:frontend": "bun run --filter frontend dev",
    "dev:backend": "bun run --filter backend dev",
    "build": "bun run --filter backend build && bun run --filter frontend build",
    "build:frontend": "bun run --filter frontend build",
    "build:backend": "bun run --filter backend build",
    "start:frontend": "bun run --filter frontend start",
    "start:backend": "bun run --filter backend start",
    "lint": "bun run --filter frontend lint",
    "clean": "rm -rf packages/*/node_modules packages/*/.next packages/*/dist node_modules",
    "install:all": "bun install"
  },
  "engines": {
    "node": ">=16.0.0",
    "bun": ">=1.0.0"
  }
}
