{
  "name": "altcash-webapp",
  "version": "2.0.1",
  "private": true,
  "description": "Altcash Full-Stack Monorepo - Next.js Frontend + Express/GraphQL Backend",
  "author": "Rocco R. <im@rocco.me>",
  "license": "CC BY-NC 4.0",
  "scripts": {
    "dev": "bun run --filter altcash-frontend dev & bun run --filter altcash-backend dev",
    "dev:frontend": "bun run --filter altcash-frontend dev",
    "dev:backend": "bun run --filter altcash-backend dev",
    "build": "bun run --filter altcash-backend build && bun run --filter altcash-frontend build",
    "build:frontend": "bun run --filter altcash-frontend build",
    "build:backend": "bun run --filter altcash-backend build",
    "start:frontend": "bun run --filter altcash-frontend start",
    "start:backend": "bun run --filter altcash-backend start",
    "lint": "bun run --filter altcash-frontend lint",
    "clean": "rm -rf packages/*/node_modules packages/*/.next packages/*/dist node_modules",
    "install:all": "bun install"
  },
  "engines": {
    "node": ">=16.0.0",
    "bun": ">=1.0.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@next/eslint-plugin-next": "^15.5.6",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "eslint": "^9.38.0",
    "eslint-config-next": "^15.5.6",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4"
  },
  "dependencies": {
    "@eslint/js": "^9.38.0",
    "eslint-plugin-compat": "^6.0.2",
    "eslint-plugin-react-refresh": "^0.4.24",
    "typescript-eslint": "^8.46.2"
  }
}
