{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "es2022",
    "module": "es2022",
    "strict": false,
    "outDir": "dist",
    "sourceMap": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "typeRoots": ["src/@types"]
  },
  "exclude": ["node_modules", "dist", "src/**/*.json"],
  "include": [
    "src/**/*",
    "untyped-binance-connector",
    "datasources",
    "models",
    "resolvers",
    "utilities",
    "config.ts",
    "index.ts",
    "types.ts"
  ]
}
